#:kivy 1.0.9
	
<DbButton@Button>:
    font_size: 24
    color: 0, 0, 0, 1
    background_normal: ''
    background_down: 'bkgrnd-down-color.png'
    background_color: .88, .88, .88, 1
    halign: 'center'
    
<DbButtonDissabled@Button>:
    font_size: 24
    color: 0, 0, 0, 1
    background_normal: 'bkgrnd-down-color.png'
    background_down: 'bkgrnd-down-color.png'
    halign: 'center'
    
<MenuScreen>
    GridLayout:
        cols: 1
        rows: 3
        padding: 10
        spacing: 10

        Label:
            text: "Menu"
			size_hint_y: None
			height: 100
            font_size: 50
        GridLayout:
            cols: 2
            rows: 2
            spacing: 10
            
            DbButton:
                text: "Add"
                on_press: root.manager.current = 'add'
            DbButton:
                text: "Remove"
                on_press: root.manager.current = 'remove'
            DbButton:
                text: "Select"
                on_press: root.manager.current = 'select'
            GridLayout:
                cols: 1
                rows: 2
                spacing: 10
				
                DbButtonDissabled:
                    text: "Open All Doors"
                DbButtonDissabled:
                    text: "Close All Doors"
                
