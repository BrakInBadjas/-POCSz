#:kivy 1.0.9
	
<DbButton@Button>:
    font_size: 24
    color: 0, 0, 0, 1
    background_normal: ''
    background_down: 'bkgrnd-down-color.png'
    background_color: .88, .88, .88, 1
    halign: 'center'
	
<MenuScreen>
    GridLayout:
        cols: 1
        rows: 3
        padding: 10
        spacing: 10

        Label:
            text: "Menu"
			size_hint_y: None
			height: 100
            font_size: 50
        GridLayout:
            cols: 2
            rows: 2
            spacing: 10
            
            DbButton:
                text: "Add"
            DbButton:
                text: "Remove"
            DbButton:
                text: "Select"
            GridLayout:
                cols: 1
                rows: 2
                spacing: 10
				
                DbButton:
                    text: "Open All Doors"
                DbButton:
                    text: "Close All Doors"
        GridLayout:
            cols: 2
            rows: 1
            size_hint_y: None
			height: 50

            Label:
                text: ""
            DbButton:
                text: "Menu"
                size_hint_x: None
                width: 100
            


<RetrieveScreen>:
    GridLayout:
        cols: 3
        rows: 2
        padding: 10
        spacing: 10
		
        DbButton:
            text: "Return To\nMenu"
            on_press: root.manager.current = 'menu'
        DbButton:
            text: "Retrieve\nPerson"
        DbButton:
            text: "Retrieve\nDoor"
        DbButton:
            text: "Retrieve\nRole"
        DbButton:
            text: "Retrieve Permission\nBy Person"
        DbButton:
            text: "Retrieve Permission\nBy Role"
			
<AddScreen>:
    GridLayout:
        cols: 3
        rows: 2
        padding: 10
        spacing: 10
		
        DbButton:
            text: "Return To\nMenu"
            on_press: root.manager.current = 'menu'
        DbButton:
            text: "Add\nPerson"
        DbButton:
            text: "Add\nDoor"
        DbButton:
            text: "Add\nRole"
        DbButton:
            text: "Add Permission\nBy Person"
        DbButton:
            text: "Add Permission\nBy Role"			
